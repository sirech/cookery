= link_to '#', class: 'btn btn-navbar', 'data-toggle' => 'collapse', 'data-target' => '.login-collapse' do
  - 3.times do
    %span.icon-bar

%ul.nav
  %li= link_to 'Cookery', root_path, class: 'brand'
  %li.dropdown.active
    = link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do
      Recipes
      %strong.caret

    %ul.dropdown-menu
      %li= link_to 'See recipes', recipes_path
      - if can? :create, Recipe
        %li= link_to 'Add recipe', new_recipe_path

= form_tag search_recipes_path, method: 'get', class: 'navbar-search' do
  = text_field_tag :search, nil, placeholder: 'Search for recipes...', class: 'search-query span2'

.login-collapse.nav-collapse

  %ul.nav.pull-right
    - if user_signed_in?
      %li
        Signed as #{current_user.email}
      %li
        = link_to 'Sign out', destroy_user_session_path, method: :delete
    - else
      %li
        = link_to 'Sign up', new_user_registration_path
      %li.divider-vertical
      %li.dropdown
        = link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do
          Sign In
          %strong.caret

        .dropdown-menu
          = render 'devise/sessions/form', extra_class: 'popup-form', resource: User.new, resource_name: 'user'
