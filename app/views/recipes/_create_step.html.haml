#add-step.modal.hide.fade{ role: 'dialog', tabindex: '-1', 'aria-labelledby' => 'add-step-label', 'aria-hidden' => 'true'}
  .modal-header
    = button_tag 'Ã—', type: :button, class: 'close', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'
    %h3#add-step-label
      Create a new step
  .modal-body
    = simple_form_for @example_step, remote: true, html: { id: 'add-step-form', class: 'form-horizontal', 'data-type' => 'json'} do |f|

      .control-group
        = f.input :name
        = f.input :duration, wrapper: 'append' do
          = f.input_field :duration, class: 'span4'
          .btn-group
            = button_tag class: 'btn dropdown-toggle', 'data-toggle' => 'dropdown' do
              minutes
              %span.caret
            %ul.dropdown-menu
              %li
                %a{ href: '#' } hours
              %li
                %a{ href: '#' } seconds

      .control-group.fieldset
        %legend Ingredient Picker
        = text_field_tag :'ingredients', nil, placeholder: 'Add ingredients here', class: 'controls string', rel: 'tooltip', 'data-toggle' => 'tooltip', 'data-placement' => 'right', 'data-original-title' => 'Add ingredients by writing them here'


  .modal-footer
    = button_tag id: 'add-step-confirm', class: 'btn btn-primary' do
      %i.icon-ok.icon-white
      Save
