%ul.thumbnails.row
  - recipes.each do |recipe|
    %li.col-lg-3.col-md-4.col-sm-6.col-xs-12
      = link_to recipe, class: 'thumbnail shadow' do
        = main_picture_tag recipe
        %div.caption
          %h3= recipe.name
          %div.row.hidden-xs
            .col-md-4.col-sm-3
              = difficulty_tag recipe.difficulty
            .col-md-8.col-sm-9
              = duration_tag(recipe.duration, class: 'small-duration')
          %div.categories-row.row.hidden-xs
            .col-md-12
              - recipe.categories.each do |category|
                %span.label.label-info= category.name
