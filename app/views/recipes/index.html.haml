%div.well
  %div.container-fluid
    %div.row-fluid
      %div.span12
        %h1 Recipes
        = link_to new_recipe_path, class: 'btn btn-large btn-success' do
          %i.icon-plus-sign.icon-white
          Add Recipe

%ul.thumbnails
  - @recipes.each do |recipe|
    %li.span3
      = link_to recipe, class: 'thumbnail boxed shadow' do
        = main_picture_tag recipe
        %div.caption
          %h3= recipe.name
          %div.row-fluid
            .span4
              = difficulty_tag recipe.difficulty
            .span8
              = duration_tag(recipe.duration, class: 'small-duration')
          %div.row-fluid
            - recipe.categories.each do |category|
              %span.badge.badge-info= category.name

%br

%div.text-center= page_entries_info @recipes
= paginate @recipes


