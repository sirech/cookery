= simple_form_for @recipe, html: { multipart: true, class: 'form-horizontal' } do |f|

  = f.input :name
  = f.input :difficulty, collection: Recipe.difficulty_levels, default: 1

  %hr

  = f.input :picture, as: :picture

  %hr

  = f.association :categories, collection: Category.order(:name).load, input_html: { rel: 'tooltip', 'data-toogle' => 'tooltip', 'data-placement' => 'right', 'data-original-title' => 'Select one or multiple categories from the list'}

  .controls
    = text_field_tag :'extra-category', nil, placeholder: 'Extra: Category1, Category2, Category3', class: 'string', rel: 'tooltip', 'data-toggle' => 'tooltip', 'data-placement' => 'right', 'data-original-title' => 'Add extra categories by writing them here'

  %hr

  .controls
    = button_tag type: :submit, class: 'btn btn-success', 'data-loading-text' => 'Saving...' do
      %i.icon-ok.icon-white
      Save
    = link_to recipes_path, class: 'btn btn-danger' do
      %i.icon-remove.icon-white
      Back

