= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "#{extra_class}" } do |f|
  .form-inputs
    = f.input :email, required: false, autofocus: true, label: false, placeholder: 'email'
    = f.input :password, required: false, label: false, placeholder: 'password'
    = f.input :remember_me, as: :boolean, label: false, inline_label: 'Remember me' if devise_mapping.rememberable?

  .form-actions
    = f.button :submit, 'Sign in', class: 'btn btn-primary'
